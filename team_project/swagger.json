  "info": {
    "title": "Bookstore API",
    "version": "1.0.0",
    "description": "API for managing users and books"
  },
  "host": "team-project-ahvx.onrender.com",
  "schemes": [
    "http",
    "https"
  ],
  "tags": [
    {
      "name": "Users",
      "description": "User CRUD operations"
